<div class="container">
  <div class="row">
    <div class="col-md-12 mt-3">
    <% @notes.each do |note| %>
      <div class="card">
        <div class="card-body">
          <small><b><%= note.user.name %></b> <i>@<%= link_to note.user.username, user_path(note.user) %></i> - <%= distance_of_time_in_words(note.created_at, Time.now)%> ago</small>
          <p><%= note.post %></p>
          <% if current_user %>
          <tr>
              <td>
                <div id="likes-button_<%= note.id %>">
                  <%= render "shared/likes_button", note: note %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if note.user != current_user %>
            <div id="follow_<%= note.user.id %>">
              <p><%= render partial: 'shared/follow_form', locals: {user: note.user} %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
</div>